<%= form_for @output, :html => { :class => "form-horizontal output" } do |f| %>

    <% if @output.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@output.errors.count, "error") %> prohibited this output from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @output.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :watt, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :watt, :class => 'form-control' %>
    </div>
    <%= error_span(@output[:watt]) %>
  </div>
  <div class="control-group">
    <%= f.label :voltage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :voltage, :class => 'form-control' %>
    </div>
    <%= error_span(@output[:voltage]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            outputs_path, :class => 'btn btn-default' %>

<% end %>
